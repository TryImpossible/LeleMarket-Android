<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basic_white"
    android:paddingTop="@dimen/basic_dp_12">

    <LinearLayout
        android:id="@+id/ll_weixin_circle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/basic_dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll_weixin"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_ic_share_weixin_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_dp_4"
            android:text="朋友圈"
            android:textColor="@color/basic_text_normal"
            android:textSize="@dimen/basic_text_normal_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weixin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ll_weixin_circle"
        app:layout_constraintLeft_toRightOf="@id/ll_weixin_circle"
        app:layout_constraintRight_toLeftOf="@id/ll_qonze"
        app:layout_constraintTop_toTopOf="@id/ll_weixin_circle">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_ic_share_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_dp_4"
            android:text="微信好友"
            android:textColor="@color/basic_text_normal"
            android:textSize="@dimen/basic_text_normal_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_qonze"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/basic_dp_12"
        app:layout_constraintBottom_toBottomOf="@id/ll_weixin"
        app:layout_constraintLeft_toRightOf="@id/ll_weixin"
        app:layout_constraintRight_toLeftOf="@id/ll_qq"
        app:layout_constraintTop_toTopOf="@id/ll_weixin">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_ic_share_qonze" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_dp_4"
            android:text="QQ空间"
            android:textColor="@color/basic_text_normal"
            android:textSize="@dimen/basic_text_normal_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_qq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/basic_dp_12"
        app:layout_constraintBottom_toBottomOf="@id/ll_qonze"
        app:layout_constraintLeft_toRightOf="@id/ll_qonze"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_qonze">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_ic_share_qq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_dp_4"
            android:text="QQ好友"
            android:textColor="@color/basic_text_normal"
            android:textSize="@dimen/basic_text_normal_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/basic_dp_12"
        app:layout_constraintLeft_toLeftOf="@id/ll_weixin_circle"
        app:layout_constraintRight_toRightOf="@id/ll_weixin_circle"
        app:layout_constraintTop_toBottomOf="@id/ll_weixin_circle">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_ic_share_sina" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_dp_4"
            android:text="微博"
            android:textColor="@color/basic_text_normal"
            android:textSize="@dimen/basic_text_normal_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ll_sina"
        app:layout_constraintLeft_toLeftOf="@id/ll_weixin"
        app:layout_constraintRight_toRightOf="@id/ll_weixin"
        app:layout_constraintTop_toBottomOf="@id/ll_weixin"
        app:layout_constraintTop_toTopOf="@id/ll_sina">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_ic_share_link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_dp_4"
            android:text="复制链接"
            android:textColor="@color/basic_text_normal"
            android:textSize="@dimen/basic_text_normal_size" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_divide_line_height"
        android:layout_marginTop="@dimen/basic_dp_10"
        android:background="@color/basic_divide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_sina" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_layout_selector"
        android:gravity="center"
        android:paddingVertical="@dimen/basic_dp_12"
        android:text="取消"
        android:textColor="@color/basic_text_normal"
        android:textSize="@dimen/basic_text_normal_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />
</androidx.constraintlayout.widget.ConstraintLayout>
