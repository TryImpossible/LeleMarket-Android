<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/left_divider1"
        android:layout_width="30dp"
        android:layout_height="@dimen/basic_dp_1"
        android:layout_marginBottom="@dimen/basic_dp_4"
        android:background="@color/basic_black"
        app:layout_constraintBottom_toTopOf="@id/left_divider2"
        app:layout_constraintLeft_toLeftOf="@id/left_divider2"
        app:layout_constraintRight_toRightOf="@id/left_divider2" />

    <View
        android:id="@+id/left_divider2"
        android:layout_width="30dp"
        android:layout_height="@dimen/basic_dp_1"
        android:layout_marginBottom="@dimen/basic_dp_4"
        android:background="@color/basic_black"
        app:layout_constraintBottom_toTopOf="@id/left_divider3"
        app:layout_constraintLeft_toLeftOf="@id/left_divider3"
        app:layout_constraintRight_toRightOf="@id/left_divider3" />

    <View
        android:id="@+id/left_divider3"
        android:layout_width="30dp"
        android:layout_height="@dimen/basic_dp_1"
        android:layout_marginBottom="@dimen/basic_dp_4"
        android:background="@color/basic_black"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/basic_text_dark"
        android:textSize="@dimen/basic_text_big_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ios手机壳定制专区" />

    <View
        android:id="@+id/right_divider1"
        android:layout_width="30dp"
        android:layout_height="@dimen/basic_dp_1"
        android:layout_marginBottom="@dimen/basic_dp_4"
        android:background="@color/basic_black"
        app:layout_constraintBottom_toTopOf="@id/right_divider2"
        app:layout_constraintLeft_toLeftOf="@id/right_divider2"
        app:layout_constraintRight_toRightOf="@id/right_divider2" />

    <View
        android:id="@+id/right_divider2"
        android:layout_width="30dp"
        android:layout_height="@dimen/basic_dp_1"
        android:layout_marginBottom="@dimen/basic_dp_4"
        android:background="@color/basic_black"
        app:layout_constraintBottom_toTopOf="@id/right_divider3"
        app:layout_constraintLeft_toLeftOf="@id/right_divider3"
        app:layout_constraintRight_toRightOf="@id/right_divider3" />

    <View
        android:id="@+id/right_divider3"
        android:layout_width="30dp"
        android:layout_height="@dimen/basic_dp_1"
        android:layout_marginBottom="@dimen/basic_dp_4"
        android:background="@color/basic_black"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
