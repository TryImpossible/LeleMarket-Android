<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  BannerView  -->
    <declare-styleable name="CommonBannerView">
        <!--是否自动播放-->
        <attr name="auto_play" format="boolean" tools:ignore="ResourceName" />
        <!--是否轮播-->
        <attr name="loop" format="boolean" tools:ignore="ResourceName" />
    </declare-styleable>

    <!--  Indicator  -->
    <declare-styleable name="CommonIndicator">
        <!--是否显示-->
        <attr name="visible" format="boolean" tools:ignore="ResourceName" />
        <!--单个大小-->
        <attr name="item_size" format="dimension|reference" tools:ignore="ResourceName" />
        <!--颜色-->
        <attr name="color" format="color|reference" tools:ignore="ResourceName" />
        <!--选中颜色-->
        <attr name="checked_color" format="color|reference" tools:ignore="ResourceName" />
        <!--边距-->
        <attr name="item_margin" format="dimension|reference" tools:ignore="ResourceName" />
        <!--数量-->
        <attr name="count" format="integer" tools:ignore="ResourceName" />
    </declare-styleable>

    <!--  HeaderView  -->
    <declare-styleable name="CommonHeaderView">
        <!--是否显示返回图标-->
        <attr name="back_icon_visible" format="boolean" tools:ignore="ResourceName" />
        <!--返回图标-->
        <attr name="back_icon" format="reference" tools:ignore="ResourceName" />
        <!--返回文案-->
        <attr name="back_text" format="string" tools:ignore="ResourceName" />
        <!--标题-->
        <attr name="title" format="string" tools:ignore="ResourceName" />
        <!--菜单图标-->
        <attr name="menu_icon" format="reference" tools:ignore="ResourceName" />
        <!--菜单文案-->
        <attr name="menu_text" format="string" tools:ignore="ResourceName" />
        <!--分隔线是否可见-->
        <attr name="line_visible" format="boolean" tools:ignore="ResourceName" />
    </declare-styleable>

    <!--  EmptyView  -->
    <declare-styleable name="CommonEmptyView">
        <!--图标-->
        <attr name="icon" format="reference" tools:ignore="ResourceName" />
        <!--提示文案-->
        <attr name="prompt" format="string" tools:ignore="ResourceName" />
        <!--按钮标题-->
        <attr name="button_title" format="string" tools:ignore="ResourceName" />
    </declare-styleable>

    <!--加载状态布局-->
    <declare-styleable name="CommonLoadStateLayout">
        <attr name="loading" format="reference" tools:ignore="ResourceName" />
        <attr name="failure" format="reference" tools:ignore="ResourceName" />
        <attr name="empty" format="reference" tools:ignore="ResourceName" />
        <attr name="no_network" format="reference" tools:ignore="ResourceName" />
    </declare-styleable>
</resources>