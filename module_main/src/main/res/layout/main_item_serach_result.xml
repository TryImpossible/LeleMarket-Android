<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_layout_selector"
        android:padding="@dimen/common_activity_horizontal_margin">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_dp_12"
            android:singleLine="false"
            android:textColor="@color/common_text_normal"
            android:textSize="@dimen/common_text_normal_size"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_icon"
            tools:text="换一种方式出发，定制，从此永不将就" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dp_12"
            android:singleLine="true"
            android:textColor="@color/common_text_light"
            android:textSize="@dimen/common_text_small_size"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            app:layout_constraintRight_toRightOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="DIY充电打火机" />

        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dp_12"
            android:singleLine="true"
            android:textColor="@color/common_text_normal"
            android:textSize="@dimen/common_text_small_mini_size"
            app:layout_constraintLeft_toLeftOf="@id/tv_name"
            app:layout_constraintRight_toLeftOf="@id/btn_custom"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="已定制677件" />

        <Button
            android:id="@+id/btn_custom"
            style="@style/CommonMyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_dp_12"
            android:background="@drawable/common_bg_button_solid_accent_radius_20"
            android:text="@string/main_button_custom"
            android:textColor="@color/common_white"
            android:textSize="@dimen/common_text_small_mini_size"
            app:layout_constraintBottom_toBottomOf="@id/tv_sale"
            app:layout_constraintLeft_toRightOf="@id/tv_sale"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_sale" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>