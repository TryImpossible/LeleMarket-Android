<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/common_activity_horizontal_margin"
    android:paddingVertical="@dimen/common_dp_12">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        tools:src="@mipmap/mine_ic_coupon" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/common_dp_12"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/common_text_normal"
        android:textSize="@dimen/common_text_normal_size"
        tools:text="@string/mine_label_coupon" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        tools:src="@mipmap/common_ic_right_arrow" />

</LinearLayout>
