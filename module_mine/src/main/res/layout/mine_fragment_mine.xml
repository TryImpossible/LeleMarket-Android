<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MineFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_action_bar_height"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_smile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/basic_activity_horizontal_margin"
            android:background="@color/basic_transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/mine_ic_user_default_header"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/basic_dp_10"
            android:layout_toRightOf="@+id/ib_smile"
            android:gravity="center"
            android:text="@string/mine_label_login"
            android:textColor="@color/basic_white"
            android:textSize="@dimen/basic_text_normal_size"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ib_news"
            android:layout_width="@dimen/basic_action_bar_height"
            android:layout_height="@dimen/basic_action_bar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/basic_transparent"
            android:scaleType="center"
            android:src="@mipmap/common_ic_news"
            android:tint="@color/basic_white" />
    </RelativeLayout>
</FrameLayout>